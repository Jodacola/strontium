{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "node",
    "lib": [ "dom", "es2015.promise", "es6" ],
    "jsx": "react",
    "module": "esnext",
    "typeRoots": [
      "./node_modules/@types",
      "./lib/typings"
    ]
  },
  "compileOnSave": false,
  "include": [
    "./lib/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
